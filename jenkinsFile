pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your Git repository
                git 'https://github.com/milind1213/conozen.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Run the tests using Maven
                sh 'mvn test'
            }

            post {
                always {
                    // Archive the test results
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
